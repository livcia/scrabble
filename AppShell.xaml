<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="randomWordGenerator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:randomWordGenerator"
    xmlns:game="clr-namespace:randomWordGenerator.Game"
    Shell.FlyoutBehavior="Disabled"
    Title="randomWordGenerator">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent Title="Game" ContentTemplate="{DataTemplate game:GamePage}" />

</Shell>
