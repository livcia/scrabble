<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="randomWordGenerator.Game.GamePage">

    <VerticalStackLayout HorizontalOptions="Center">
        <HorizontalStackLayout>
            <Grid x:Name="ScrabbleBoardContainer" Grid.Row="1" />


            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="End" Margin="10">
                <Button Text="Restart" Margin="20"/>
                <Button Text="Back to Menu" Margin="20"/>
                <Button x:Name="xd" Text="Change Letter" Margin="20"/>
                <StackLayout x:Name="ChoosenLetter"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <HorizontalStackLayout VerticalOptions="EndAndExpand" HorizontalOptions="Start" Margin="10">
            <StackLayout x:Name="LettersStackLayout" Orientation="Horizontal" VerticalOptions="EndAndExpand" HorizontalOptions="Center" Margin="10"></StackLayout>

            <StackLayout/>
           <Label x:Name="Left" Text="Pozostało liter w puli: 100" FontSize="24" VerticalOptions="Center" HorizontalOptions="End" Margin="10" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
