<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="randomWordGenerator.Game.GamePage"
             Title="Game">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Back" Clicked="OnBackButtonClicked" Order="Primary" Priority="0" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <HorizontalStackLayout>
           
            <Grid x:Name="SelectedLettersGrid" HorizontalOptions="Center">
                <Grid.ColumnDefinitions>
                    <!-- Initial column definitions can be empty -->
                </Grid.ColumnDefinitions>
            </Grid>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Button Text="Zatwierdź" BackgroundColor="Green" WidthRequest="100"/>
                <Label x:Name="TotalTilesLabel" FontSize="Medium" />
                <StackLayout x:Name="LettersStackLayout" Orientation="Horizontal" />
            </VerticalStackLayout>

        </HorizontalStackLayout>

    </VerticalStackLayout>
   
</ContentPage>