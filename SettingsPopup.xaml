<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="randomWordGenerator.SettingsPopup">

    <VerticalStackLayout Padding="20" BackgroundColor="White" WidthRequest="300" HeightRequest="200">
        <Label Text="Ustaw dźwięk:" FontSize="Medium" HorizontalOptions="Center" />
        <Slider x:Name="volumeSlider" Minimum="0" Maximum="1" ValueChanged="OnSliderValueChanged" />
        <Button Text="Close" Clicked="OnCloseButtonClicked" />
    </VerticalStackLayout>

</toolkit:Popup>
